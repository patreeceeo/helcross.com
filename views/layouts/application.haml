!!!
%html{html_attrs, xmlns:fb="http://ogp.me/ns/fb#"}
  %head
    
    -# METAS #-#-

    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=2.0, user-scalable=yes")
    %meta{:name => "lang", :content => "en"}
    %meta{:'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8"}
    -# These are Open Graph tags.  They add meta data to your
    -# site that facebook uses when your content is shared
    -# over facebook.  You should fill these tags in with
    -# your data.  To learn more about Open Graph, visit
    -# 'https://developers.facebook.com/docs/opengraph/'
    %meta{:property=>"og:title", :content=>"#{@app['name']}"}
    %meta{:property=>"og:type", :content=>"website"}
    %meta{:property=>"og:url", :content=>"http://helcross-fbapp.herokuapp.com"}
    %meta{:property=>"og:image", :content=>"#{url('/logo.png')}"}
    %meta{:property=>"og:site_name", :content=>"#{@app['name']}"}
    %meta{:property=>"og:description", :content=>"Hel+"}
    %meta{:property=>"fb:app_id", :content=>"#{@app['id']}"}


    -# TITLE #-#-

    %title=@app['name']


    -# LINKS #-#-
    :erb
      <link
        rel="stylesheet" 
        href="stylesheets/mobile.css" 
        media="handheld, only screen and (max-width: 480px), only screen and (max-device-width: 480px)" 
        type="text/css" 
        >
      <!--[if IEMobile]>
        <link
          rel="stylesheet" 
          href="stylesheets/mobile.css" 
          media="screen" 
          type="text/css"
          >
      <![endif]-->
      <link
        rel="stylesheet" 
        href="stylesheets/lib/bootstrap.css" 
        media="screen" 
        type="text/css"
        >
      <link
        rel="stylesheet" 
        href="stylesheets/lib/responsive.css" 
        media="screen" type="text/css"
        >
      <link
        href="/stylesheets/application.css"
        media="screen"
        rel="stylesheet"
        type="text/css"
        >
      <!--link rel="stylesheet" href="stylesheets/grid.css" media="screen" type="text/css"-->
      <!--link rel="stylesheet" href="stylesheets/base.css" type="text/css"-->
      <link
        href="http://fonts.googleapis.com/css?family=Quattrocento+Sans|Loved+by+the+King"
        rel="stylesheet"
        type="text/css"
        >
      <!-- Le fav and touch icons -->
      <link
        rel="icon" 
        type="image/ico" 
        href="/favicon.ico"
        >
      <link
        rel="apple-touch-icon-precomposed" 
        sizes="114x114" 
        href="../assets/ico/apple-touch-icon-114-precomposed.png"
        >
      <link
        rel="apple-touch-icon-precomposed" 
        sizes="72x72" 
        href="../assets/ico/apple-touch-icon-72-precomposed.png"
        >
      <link
        rel="apple-touch-icon-precomposed" 
        href="../assets/ico/apple-touch-icon-57-precomposed.png"
        >
    -# end of erb filter


    -# SCRIPTS #-#-

    -# Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      %script(src="http://html5shim.googlecode.com/svn/trunk/html5.js")
    =lib_script "fb"
    %script(type="text/javascript")
      var app_url = '#{@app['url']}';
      var app_id = '#{@app['id']}';
      var app_channelUrl = '#{url_no_scheme('/channel.html')}';
    /[if IE]
      %script{:type=>"text/javascript"} 
        var tags = ['header', 'section']; while(tags.length); document.createElement(tags.pop());



  %body


    -# FACEBOOK INIT #-#- 

    %div(id="fb-root")
    =lib_script "fb-init"


    -# TOP LEVEL STRUCTURE #-#-

    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand(href="#")
            -# %img(src="/images/helcross.png")  
            Hel+
          .nav-collapse
            %ul.nav
              %li.active
                %a(href="#") Home
              %li
                %a(href="#About") About
              %li
                %a(href="#Contact") Contact 
          = partial "authorize"

    .container
      = yield

    -# %img#helcross(src="/images/helcross.png" onclick="showPage('home')")
    -# %header
    -#   = partial :nav_main
    -#   = partial :authorize
    -#   = partial :like_button
    -# #content
    -#   = yield
    -# = partial :analytics


    -# MORE SCRIPTS #-#-
    -# Moved to end of document so the page loads faster

    -# %script{:type=>"text/javascript", :src=>"http://code.jquery.com/jquery-1.5.min.js"}
    =lib_script "jquery-1.7.2.min"
    %script{:type => "text/javascript", :src => "/javascripts/application.js"}
    =lib_script "modernizr-1.6.min"
    -# =lib_script "gallery"
    =lib_script "bootstrap-transition"
    =lib_script "bootstrap-carousel"
    =lib_script "handlebars"
