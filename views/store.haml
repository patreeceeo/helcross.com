#store-page.container
  .span12
    .row-fluid
      .hero-unit
        = content "store"
    .row-fluid
      - each_table_row("store_inventory") do |item|
        .span4
          .store-item(data-item-id="#{item["id"]}")
            .img-wrapper
              .on-hover
                .text-wrapper
                  <p>Add to Cart</p>
                  <p>$#{item["price"]}</p>
              %img(src="#{item["picture"]}" alt="")
            <p><em>#{item["item"]}</em></p>
            <p>#{item["description"]}</p>
            
#shopping-cart-modal.modal.fade
  .modal-header
    %button(class="close" data-dismiss="modal") &times;</button>
    <h3>Shopping Cart</h3>
  .modal-body.accordian#accordian
    .accordian-group
      .accordian-heading
        %a.accordian-toggle(data-toggle="collapse" data-parent="accordian" href="#shopping-cart-contents-collapse") 
          Contents:
          %a.btn.btn-danger#empty-shopping-cart-button(href="#" style="margin-bottom: 12px" data-dismiss="modal") Empty Cart
      .collapse.in#shopping-cart-contents-collapse
        %table#shopping-cart-contents.table
          %thead
            %tr
              %th
                item
              %th
                quantity
              %th
                total price
          %tbody

    .accordian-group
      .accordian-heading
        %a.accordian-toggle(data-toggle="collapse" data-parent="accordian" href="#shopping-cart-checkout-collapse") Checkout:
      .collapse#shopping-cart-checkout-collapse
        %form.form-horizontal(action="/cart/checkout" method="POST" id="payment-form")
          %fieldset
            %legend Please enter your information to proceed.
            .control-group
              %label.control-label Name
              .controls
                %input(type="name" size="40" name="name")
            .control-group
              %label.control-label Address 1
              .controls
                %input(type="address1" size="40" name="address1")
            .control-group
              %label.control-label Address 2
              .controls
                %input(type="address2" size="40" name="address2")
            .control-group
              %label.control-label City
              .controls
                %input(type="city" size="40" name="city")

            .control-group
              %label.control-label State
              .controls
                %input(type="state" size="2" name="state")
            .control-group
              %label.control-label Zip
              .controls
                %input(type="zipcode" size="7" name="zipcode")
            .control-group
              %label.control-label Card Number
              .controls
                %input(type="text" size="20" autocomplete="off" class="card-number")
            .control-group
              %label.control-label CVC
              .controls
                %input(type="text" size="4" autocomplete="off" class="card-cvc")
            .control-group
              %label.control-label Expiration (MM/YYYY)
              .controls
                <input type="text" size="2" maxlength="2"><span> / </span><input type="text" size="4" maxlength="4">
          %button.btn.btn-primary(type="submit") Submit Payment
      
  .modal-footer
    %a.btn(href="#" data-dismiss="modal") Cancel

%script
  $(document).ready(function() { cart.refresh();});





