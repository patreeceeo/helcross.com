%script#forum-post-template(type="text/x-handlebars-template")
  {{#post data}}
  .post-inner
    {{#primary-actor from}}{{/primary-actor}}
    .message-container
      {{message}} 
    {{#if-video type}}
    .video-container
      .icon-container
        %img(src="{{icon}}")
      .video-preview
        %img(src="{{picture}}")
        %a(href="{{link}}") {{caption}}
      %iframe.video(width="560" height="315" src="http://www.youtube.com/embed/{{video_oid}}?rel=0" frameborder="0" allowfullscreen)
      .meta-container
        .post-name-container
          {{name}}
        .description-container
          {{description}}
    {{/if-video}}
